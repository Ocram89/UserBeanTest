<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <jsp-file>/Login.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <jsp-file>/Logout.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <jsp-file>/User.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>ErrorServlet</servlet-name>
    <jsp-file>/ErrorPage.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <jsp-file>/HelloPage.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <jsp-file>/SignUp.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>CreateServlet</servlet-name>
    <jsp-file>/CreateUser.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/User</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ErrorServlet</servlet-name>
    <url-pattern>/ErrorPage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/HelloPage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/SignUp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateServlet</servlet-name>
    <url-pattern>/CreateUser</url-pattern>
  </servlet-mapping>
</web-app>